{
  "name": "prepublish",
  "version": "1.7.0",
  "description": "Simplifies the prepare step (bundling, transpiling, rebasing) during publishing NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepublish",
    "prepare",
    "release",
    "library",
    "api",
    "tooling",
    "rollup",
    "babel",
    "rebase"
  ],
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=0.21.3"
  },
  "bin": {
    "prepublish": "./bin/prepublish"
  },
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "rimraf test/lib test/dist && npm run prepare && ./bin/prepublish --input-node test/src/index.js --output-folder test/lib && webpack --hide-modules --config test/webpack.config.js",
    "prepare": "rimraf bin && rollup -c rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/prepublish.git"
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "async": "^2.6.1",
    "babel-preset-edge": "^4.9.4",
    "babel-runtime": "^6.26.0",
    "chalk": "^2.4.1",
    "core-js": "^2.5.7",
    "file-exists": "^5.0.1",
    "fs-extra": "^7.0.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.10",
    "meow": "^5.0.0",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-executable": "^1.2.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-rebase": "^2.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-yaml": "^1.1.0"
  },
  "devDependencies": {
    "css-loader": "^1.0.0",
    "eslint-config-readable": "^2.1.3",
    "file-loader": "^1.1.11",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0"
  }
}
